@rendermode InteractiveServer

@if (string.IsNullOrEmpty(ComponentSelector))
{
    <CoursesView OnClick="RenderClickedPage" />
}
else if (ComponentSelector == "Create")
{
    <CourseCreate OnClick="RenderClickedPage" />
}
else
{
    <CourseEdit OnClick="RenderClickedPage" CourseId="@ComponentSelector" />
}

@code {
    [Parameter]
    public string? SuppliedString { get; set; }
    private string ComponentSelector = "";

    private void RenderClickedPage(string SuppliedString)
    {
        ComponentSelector = SuppliedString;
        StateHasChanged();
    }
}
