@inherits LayoutComponentBase
@inject NavigationManager Navigation


<div class="wrapper">

    @if (!Navigation.Uri.Contains("/signin"))
    {
        <_Header />
    }

    @Body
    @if (!Navigation.Uri.Contains("/signin"))
    {
        <_Footer />
    }

</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<BlazoredModal/>